<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Text?>

<BorderPane styleClass="root" stylesheets="@../css/visualizza-style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashapp.controller.VisualizzaController">

   <!-- Barra in alto -->
   <top>
      <HBox alignment="CENTER_LEFT" spacing="15" styleClass="top-bar">
         <Text styleClass="catalog-title" text="Visualizza Brano" />
         <fx:include fx:id="nav" source="navbar.fxml" />
      </HBox>
   </top>

   <!-- Contenuto centrale scrollabile -->
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" focusTraversable="false" styleClass="main-container">
         <VBox spacing="15">
            <padding>
               <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Video -->

            <!-- Controlli media -->
            <!-- Contenitore centrale per centrare tutto -->
            <HBox alignment="CENTER">
               <VBox alignment="CENTER" maxWidth="980" spacing="5" style="-fx-border-width: 0 0 1px 0;">

                  <!-- Placeholder immagine audio -->
                  <ImageView fx:id="audioPlaceholder" cache="true" fitHeight="400" fitWidth="980" managed="false" preserveRatio="true" smooth="true" visible="false" />

                  <!-- Video player -->
                  <MediaView fx:id="mediaView" fitHeight="400" fitWidth="980" preserveRatio="true" />

                  <!-- Barra di progresso -->
                  <Slider fx:id="progressSlider" maxWidth="-Infinity" prefWidth="978" />

                  <!-- Controlli video -->
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <Button fx:id="rewindButton" styleClass="video-button" text="âª" />
                     <Button fx:id="toggleButton" styleClass="video-button" text="â–¶" />
                     <Button fx:id="forwardButton" styleClass="video-button" text="â©" />
                     <Label fx:id="timeLabel" text="00:00 / 00:00" />

                     <!-- Volume -->
                     <StackPane fx:id="volumeContainer" alignment="CENTER_LEFT" onMouseEntered="#showVolumeSlider" onMouseExited="#hideVolumeSlider">
                        <HBox alignment="CENTER_LEFT" spacing="5">
                           <Label style="-fx-font-size: 16px; -fx-text-fill: white;" text="ðŸ”Š" />
                           <Slider fx:id="volumeSlider" max="1" min="0" opacity="0" prefWidth="80" value="0.5" visible="false" />
                        </HBox>
                     </StackPane>

                     <!-- Pulsante download -->
                     <Button fx:id="scaricaButton" onAction="#scaricaBrano" styleClass="video-button" text="â¬‡" />
                  </HBox>

               </VBox>
            </HBox>



            <!-- Campo nuovo commento -->

            <!-- Commenti -->
            <VBox spacing="10">

               <!-- Titolo e campo per aggiungere nuovo commento -->
               <VBox spacing="10">
                  <Text fill="WHITE" styleClass="comm-title" text="Commenti" />
                  <TextField fx:id="newCommentField" promptText="Aggiungi un commento..." styleClass="comm-field" />
                  <Button fx:id="pubblicaButton" styleClass="comm-button" text="Pubblica" />
               </VBox>

               <!-- Commenti caricati dinamicamente -->
               <VBox fx:id="commentSection" />
            </VBox>
         </VBox>
      </ScrollPane>
   </center>


</BorderPane>
