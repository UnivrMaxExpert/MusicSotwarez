<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Text?>
<?import com.jfoenix.controls.JFXTextField?>

<BorderPane styleClass="root"
            stylesheets="@../css/visualizza-style.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.dashapp.controller.VisualizzaController">

   <!-- Barra in alto -->
   <top>
      <HBox alignment="CENTER_LEFT" spacing="15" styleClass="top-bar">
         <Text styleClass="catalog-title" text="Visualizza Brano" />
         <fx:include fx:id="nav" source="navbar.fxml" />
      </HBox>
   </top>

   <!-- Contenuto centrale scrollabile -->
   <center>
      <ScrollPane fitToWidth="true"
                  focusTraversable="false"
                  vbarPolicy="AS_NEEDED"
                  hbarPolicy="NEVER"
                  styleClass="main-container">
         <content>
            <VBox spacing="15" prefWidth="Infinity">
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>

               <!-- Video e controlli -->
               <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                  <StackPane fx:id="videoContainer"
                             prefWidth="980"
                             minHeight="550"
                             maxHeight="Infinity"
                             styleClass="video-wrapper"
                             StackPane.alignment="CENTER">

                     <!-- Placeholder immagine audio -->
                     <ImageView fx:id="audioPlaceholder"
                                fitWidth="980"
                                preserveRatio="true"
                                visible="false"
                                managed="false"
                                StackPane.alignment="CENTER" />

                     <!-- Video player -->
                     <MediaView fx:id="mediaView"
                                fitWidth="980"
                                preserveRatio="true"
                                StackPane.alignment="CENTER" />

                     <!-- Controlli video -->
                     <VBox fx:id="videoControls" alignment="BOTTOM_CENTER" spacing="8"
                           styleClass="video-controls" mouseTransparent="false"
                           StackPane.alignment="BOTTOM_CENTER">
                        <Slider fx:id="progressSlider" prefWidth="960" />
                        <HBox alignment="CENTER_LEFT" spacing="10">
                           <Button fx:id="rewindButton" styleClass="video-button" text="âª"/>
                           <Button fx:id="toggleButton" styleClass="video-button" text="â–¶" />
                           <Button fx:id="forwardButton" styleClass="video-button" text="â©" />
                           <Label fx:id="timeLabel" text="00:00 / 00:00" />
                           <HBox spacing="5" alignment="CENTER_LEFT">
                              <Label text="ðŸ”Š" style="-fx-font-size: 16px; -fx-text-fill: white;" />
                              <Slider fx:id="volumeSlider" max="1" min="0" prefWidth="80" value="0.5" />
                           </HBox>
                           <Button fx:id="scaricaButton" text="â¬‡" styleClass="video-button" />
                        </HBox>
                     </VBox>
                  </StackPane>
               </HBox>

               <!-- Tab switch -->
               <HBox spacing="10" alignment="CENTER_LEFT">
                  <Button fx:id="commentiButton" text="Commenti" onAction="#mostraCommenti" styleClass="tab-switch-button"/>
                  <Button fx:id="noteButton" text="Note" onAction="#mostraNote" styleClass="tab-switch-button"/>
               </HBox>

               <!-- Area Commenti -->
               <ScrollPane fx:id="commentiPane" fitToWidth="true" vbarPolicy="AS_NEEDED" visible="true" managed="true">
                  <VBox spacing="10">
                     <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                     </padding>
                     <Text fill="WHITE" styleClass="comm-title" text="Commenti" />
                     <JFXTextField fx:id="newCommentField" promptText="Aggiungi un commento..." styleClass="comm-field" />
                     <Button fx:id="pubblicaButton" styleClass="comm-button" text="Pubblica" />
                     <VBox fx:id="commentSection" spacing="10" />
                  </VBox>
               </ScrollPane>

               <!-- Area Note -->
               <ScrollPane fx:id="notePane" fitToWidth="true" vbarPolicy="AS_NEEDED" visible="false" managed="false">
                  <VBox spacing="10">
                     <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                     </padding>
                     <Text fill="WHITE" styleClass="comm-title" text="Note" />
                     <Button fx:id="aggiungiNotaButton" styleClass="comm-button" text="Aggiungi Nota" />
                     <VBox fx:id="noteSection" spacing="10" />
                  </VBox>
               </ScrollPane>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
